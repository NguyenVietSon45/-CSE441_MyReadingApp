<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myreadingapp.Activities.ProfileActivity"
    android:orientation="vertical"
    style="@style/SCREEN">

    <FrameLayout
        android:id="@+id/frameLayout_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_arrow_back_24" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="My Profile"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/TEXT"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="80dp"
                    android:src="@drawable/yatoblink" />


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="Sekki"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    style="@style/TEXT"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tool" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nền giao diện:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/TEXT"/>

                <Switch
                    android:id="@+id/switch_MODE"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="80dp"
                    android:layout_weight="1" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_account_setting"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:drawableLeft="@drawable/settings"
                android:text="Tài khoản"
                android:textSize="20dp"
                android:backgroundTint="#D9D9D9"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/btn_upload_manga"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:drawableLeft="@drawable/upload"
                android:text="Đăng truyện"
                android:textSize="20dp"
                android:backgroundTint="#D9D9D9"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/btn_upload_chapter"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:drawableLeft="@drawable/upload"
                android:text="Đăng chương"
                android:textSize="20dp"
                android:backgroundTint="#D9D9D9"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/btn_search"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:drawableLeft="@drawable/upload"
                android:text="Tìm kiếm nâng cao"
                android:textSize="20dp"
                android:backgroundTint="#D9D9D9"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#D9D9D9"
                android:drawableLeft="@drawable/log_out"
                android:text="Đăng xuất"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>