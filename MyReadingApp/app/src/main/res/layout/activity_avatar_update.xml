<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AvatarUpdateActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="My Profile"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            style="@style/TEXT"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi ảnh đại diện"
        android:textSize="30dp"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"/>
<!--    <ImageView-->
<!--        android:id="@+id/img_avt"-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:src="@drawable/baseline_account_circle_24" />-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avt"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/none_avatar"
        android:clickable="true" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/btn_upload_avt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/upload"
        android:text="Tải ảnh lên"
        android:textSize="20dp"
        android:backgroundTint="#D9D9D9"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"/><Button
        android:id="@+id/btn_save_avt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/save"
        android:text="Lưu ảnh"
        android:textSize="20dp"
        android:backgroundTint="#D9D9D9"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"/>
    <Button
        android:id="@+id/btn_delete_avt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/trash"
        android:text="Xoá ảnh"
        android:textSize="20dp"
        android:backgroundTint="#D9D9D9"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

</LinearLayout>